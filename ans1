<?PHP

function anagram($str1,$str2){

 $str_len_1 = strlen($str1);
 $str_len_2 =strlen($str2);
 if($str_len_1!= $str_len_2)
 return "Sorry!! String is not anadrom";
  
 $val=0;
 $sum1=0;$sum2=0;
 for($i=0;$i < $str_len_1; $i++)
  {
    $sum1 += $str1[$i];
    $sum2 += $str2[$i];
    $val ^= $str1[$i] ^ $str2[$i];
 }
  
 if(($val == 0) && ($sum1 == $sum2))
    echo 'yes string is anadrom';
 else
    return "Sorry!! String is not anadrom";
  
  }
 
 
 echo anagram('shilpi','ilpshi');
 
 

?>
